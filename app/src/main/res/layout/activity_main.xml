<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:transitionGroup="true"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/skipBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:onClick="onSkipButtonClick"
        android:text="@string/skipButton"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="123dp"
        android:layout_height="122dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/capture" />

    <LinearLayout
        android:layout_width="418dp"
        android:layout_height="482dp"
        android:orientation="vertical"
        android:padding="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <TextView
            android:id="@+id/introTextView2"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_margin="0dp"
            android:layout_marginTop="60dp"
            android:padding="5px"
            android:text="@string/introscreenParagraph2" />

        <TextView
            android:id="@+id/introTextView1"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_margin="0dp"
            android:layout_marginTop="204dp"
            android:text="@string/introscreenParagraph1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>